@model ProductoModelo

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Editar Producto</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
@using (Html.BeginForm("Editar", "Producto", FormMethod.Post, new { @autocomplete = "off" }))
{
    @Html.HiddenFor(model => model.ProductoId)
    <text>
        @Html.Partial("_CrearOEditar")
    </text>
}