@model List<MedicalDentCRM.Base.PagoRecibidoDetalle>

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Lista de Pagos realizados</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div class="form-row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nº Pago</th>
                        <th>Nº Ticket</th>
                        <th>Fecha Registro</th>
                        <th>Monto</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                @{
                    decimal? suma = 0;
                }
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>
                                @p.PagoRecibido.NumeroPago.ToString("0000000")
                            </td>
                            <td>
                                @p.Factura.NumeroFactura
                            </td>
                            <td class="text-center">
                                @p.PagoRecibido.FechaCreacion.ConvertirFechaCorta()
                            </td>
                            <td class="text-right">
                                @p.ImporteRecibido.FormatearADecimales()
                            </td>
                            <td class="text-center">
                                @if (p.PagoRecibido.NombreArchivo.TieneValor())
                                {
                                    <a title="Vizualizar archivo adjunto" target="_blank" href="@Url.Content(p.PagoRecibido.RutaArchivo)">
                                        <span class="fas fa-download">
                                        </span>
                                    </a>
                                }
                            </td>
                            <td class="text-center">
                                <a href="javascript:void(0)" title="Editar" class="editarPago" data-id="@p.PagoRecibidoDetalleId">
                                    <span class="fas fa-pencil-alt">
                                    </span>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="javascript:void(0)" title="Eliminar" class="eliminarPago" data-id="@p.PagoRecibidoDetalleId">
                                    <span class="fas fa-trash">
                                    </span>
                                </a>
                            </td>
                        </tr>
                        suma = suma + p.ImporteRecibido;
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right font-weight-bold">
                            TOTAL
                        </td>
                        <td class="text-right">
                            PEN @suma
                        </td>
                        <td colspan="3"></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
</div>

<script>
    $(function () {

        $('.editarPago').on('click', function () {
            //$(this).find('.modal').modal('hide');
            var id = $(this).data("id");
            var url = URL_BASE + "Factura/EditarPago/" + id;
            crearModalIzquierdolLG(url, 1, 1);
        });

        $('.eliminarPago').on('click', function () {
            //$(this).find('.modal').modal('hide');
            var id = $(this).data("id");
            var url = URL_BASE + "PagoRecibido/Eliminar/" + id;
            crearModalCentrado(url, 1, 1);
        });
    });
</script>