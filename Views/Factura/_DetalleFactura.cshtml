@model MedicalDentCRM.Models.DetalleFacturaModelo

<div class="modal-header aliceblue-bg">
    <h5 style="font-weight:300;font-size:20px;" class="modal-title" id="exampleModalLongTitle">
        <i class="text-muted"><svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" x="0" y="0" viewBox="0 0 512 512" xml:space="preserve" class="icon icon-lg"><path d="M405.8 355.3s-79-22.6-87.8-52.8c-8.8-30.2 26.3-86.7 26.3-86.7s52.7-52 17.6-77.8c0 0 35.1-138-105.4-138-141 0-105.7 137.8-105.7 137.8-35.3 25.8 17.6 77.5 17.6 77.5s35.2 56 26.4 86.1c-8.8 30.2-88.1 53.9-88.1 53.9C-16.8 363.9.9 512.5.9 512.5h510.3c-.1 0 17.5-148.6-105.4-157.2z"></path></svg></i>
        @Model.Cliente
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="tabDetalleCliente" style="font-size:14px">
        <ul class="nav nav-tabs" id="myTab" role="tablist" style="border-top:none">
            <li class="nav-item" style="font-size:14px">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Facturas no pagadas (@Model.CantidadFacturas)</a>
            </li>
            @*<li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">PERSONAS DE CONTACTO</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">ACTIVIDAD</a>
                </li>*@
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="p-4">
                    @foreach (var f in Model.Facturas)
                    {
                        <div class="unpaidlistitem">
                            <div class="row">
                                <div class="col-md-7">@f.NumeroFactura</div> <div class="col-md-5 text-right">@string.Format("{0}{1}", f.Moneda, f.TotalStr)</div>
                            </div> <div class="row">
                                <div class="col-md-7 text-muted">@f.FechaFacturaStr</div>
                                <div title="Enviado" class="col-md-5 text-open text-right over-flow @(f.Estado == EstadoFactura.Pendiente ?
                                        "text-primary" : f.Estado == EstadoFactura.Pagado ? "text-success" : "")">
                                    @f.EstadoStr
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            @*<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

                </div>
                <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">

                </div>*@
        </div>
    </div>
</div>