@model ComprobantePagoModelo


<div style="padding:50px 100px;font-family:Calibri;font-size:19px">
    <h2>COMPROBANTE DE PAGO:</h2>
    <p style="text-decoration:underline" class="f-w-b">SOLICITANTE: @Model.Solicitante</p>
    <p><span style="text-decoration:underline" class="f-w-b">FECHA:</span> @Model.FechaStr</p>

    @{ int i = 1; }
    <div style="padding-left:60px">
        @foreach (var p in Model.Productos)
        {
            <div>
                <span style="text-decoration:underline" class="f-w-b">@i. </span> <span style="text-decoration:underline" class="f-w-b"> PRODUCTO: </span> @p.NombreProducto <span style="text-decoration:underline" class="f-w-b">CANTIDAD: </span> @p.Cantidad @p.Unidad
                <br />
                <span class="f-w-b">PRECIO UNITARIO: </span>S/. @p.PrecioConImpuesto.FormatearADecimales()
            </div>
        }
    </div>
    <p style="padding-top:50px">
        <span class="f-w-b" style="text-decoration:underline">TOTAL: </span><span class="f-w-b">S/. @Model.TotalStr</span>
    </p>
    <p>
        <span class="f-w-b">* @Model.Documento</span>
    </p>
    <div style="border:2px solid black;width:220px;padding:10px;text-align:center">
        <span class="f-w-b">PAGO TOTAL: @Model.FechaPagado.ConvertirFechaCorta()</span>
    </div>
    <div style="margin-top:50px">
        @if (Model.RutaArchivo.TieneValor())
        {
            <img src="@Url.Content(Model.RutaArchivo)" width="300px" />
        }
    </div>
</div>

@if (!Model.FechaPagado.HasValue)
{
    <div style="color:red;margin-left:100px;font-size:26px;font-weight:bold">
        PENDIENTE DE PAGO
    </div>
}
