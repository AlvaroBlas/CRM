@model MedicalDentCRM.Models.CompaniaModelo

@{
    ViewBag.T = "<span class='fas fa-phone' style='transform: rotate(90deg)'></span> Cuenta SIP";
    ViewBag.D = "Realice y reciba llamadas de sus contactos utilizando cualquier cuenta SIP.";
    ViewBag.Titulo = "Configuración";
}

@using (Html.BeginForm("Configuracion", "Cuenta", FormMethod.Post, new { @autocomplete = "off" }))
{
    @Html.HiddenFor(model => model.CompaniaId)
    <div class="titulo-view">
        <div class="row">
            <div class="col-md-6">
                <h5 class="pull-left mb-0 pl-3" style="line-height:39px;">
                    <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" x="0" y="0" viewBox="0 0 512 512" xml:space="preserve" class="icon icon-xxlg align-text-bottom"><path d="M352 256.1H160c-8.7 0-15.8 7.1-15.8 15.8v.3c0 8.7 7.1 15.8 15.8 15.8h192c8.7 0 15.8-7.1 15.8-15.8v-.3c0-8.7-7.1-15.8-15.8-15.8zM352 352H160c-8.7 0-15.8 7.1-15.8 15.8v.3c0 8.7 7.1 15.8 15.8 15.8h192c8.7 0 15.8-7.1 15.8-15.8v-.3c0-8.7-7.1-15.8-15.8-15.8z"></path><path d="M442.9 132.3c-.2-.2-.4-.4-.6-.7l-126-126c-.2-.2-.4-.4-.7-.6-2.9-3-7-5-11.6-5H96C78.3 0 64 14.3 64 32v448c0 17.7 14.3 32 32 32h320c17.7 0 32-14.3 32-32V144c0-4.6-2-8.7-5.1-11.7zM320 54.6l73.4 73.4H336c-8.8 0-16-7.2-16-16V54.6zM416 464c0 8.8-7.2 16-16 16H112c-8.8 0-16-7.2-16-16V48c0-8.8 7.2-16 16-16h168c4.4 0 8 3.6 8 8v88c0 17.7 14.3 32 32 32h88c4.4 0 8 3.6 8 8v296z"></path></svg>
                    Configuración Compañia
                </h5>
            </div>
        </div>
    </div>
    <div class="detalle-view" style="padding-left:17px;padding-bottom:60px;">
        <div style="max-width:1040px;padding-top:18px;">
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Razon Social</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.RazonSocial, new { @class = "form-control form-control-sm" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Dirección</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control form-control-sm" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Ciudad</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Ciudad, new { @class = "form-control form-control-sm" })
                </div>
                <label for="inputPassword" class="col-sm-2 col-form-label">Provincia</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Provincia, new { @class = "form-control form-control-sm" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Telefono Fijo</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.TelefonoFijo, new { @class = "form-control form-control-sm" })
                </div>
                <label for="inputPassword" class="col-sm-2 col-form-label">Telefono Movil</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.TelefonoMovil, new { @class = "form-control form-control-sm" })
                </div>
            </div>
            <div class="form-group row">
                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-sm" })
                </div>
                <label for="Web" class="col-sm-2 col-form-label">Contraseña</label>
                <div class="col-sm-4">
                    @Html.PasswordFor(model => model.Clave, new { @class = "form-control form-control-sm" })
                </div>
            </div>
            <div class="form-group row">
                <label for="Web" class="col-sm-2 col-form-label">Web</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Web, new { @class = "form-control form-control-sm" })
                </div>
            </div>
        </div>
        <div class="fixed-bottom barraAcciones">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-sm">Cancelar</a>
            <button type="submit" class="btn btn-danger btn-sm">Guardar</button>
        </div>
    </div>
}
