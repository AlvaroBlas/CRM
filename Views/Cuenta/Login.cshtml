@model MedicalDentCRM.Models.Cuenta.LoginModelo

@{
    ViewBag.Titulo = "Iniciar sesión";
    Layout = "~/Views/Shared/_PaginaLogin.cshtml";
}

@using (Html.BeginForm("Login", "Cuenta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "ui form", @ng_submit = "submit", @id = "FormLogin", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Ancho)
    @Html.HiddenFor(model => model.Alto)
    @Html.HiddenFor(model => model.UrlHash)
    <input type="hidden" id="FakePassword" name="FakePassword" />
    <div class="logo_login" style="background-image:url('../Content/img/dent.png')">
    </div>

    if (ViewBag.Error != null)
    {
        <div class="errorP">
            <span class="field-validation-error">@ViewBag.Error</span>
        </div>
    }

    <div class="errorP">
        <span class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label for="UserName">Usuario:</label>
        @if (!string.IsNullOrEmpty(Model.Usuario))
        {
            @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control", @autocomplete = "off" })
        }
        else
        {
            @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control", @autofocus = "autofocus", @autocomplete = "off" })
        }
        @*@Html.ValidationMessageFor(model => model.UserName)*@
    </div>
    <div class="form-group" data-role="input">
        <label for="Password">Contraseña:</label>
        @Html.PasswordFor(model => model.Clave, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(model => model.Password)*@
    </div>
    <div class="form-actions">
        <button id="btnLogear" type="submit" class="btn btn-danger btn-lg btn-block">Iniciar sesión</button>
    </div>
    <div class="col-xs-6 mt-3">
        <div class="ui checkbox m-0">
            @Html.CheckBoxFor(model => model.Recordarme)
            <label for="Recordarme">Recordarme</label>
        </div>
    </div>
}
